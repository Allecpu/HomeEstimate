{
  "manifest_version": 3,
  "name": "HomeEstimate - Estrattore Annunci",
  "version": "1.0.0",
  "description": "Estrai dati da annunci immobiliari e inviali a HomeEstimate",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.idealista.it/immobile/*",
        "https://www.immobiliare.it/*",
        "https://www.casa.it/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*"
      ],
      "js": ["injector.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
